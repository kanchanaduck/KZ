@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor;
@model PTum.Models.tbUser

@{
    ViewData["Title"] = "Edit user";
}


<form asp-action="Edit">    
    <div class="col-lg-4 offset-lg-4 col-sm-8 offset-sm-2">       
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Edit user</h3>
            </div>
            <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="username" class="control-label"></label>
                <input asp-for="username" class="form-control" />
                <span asp-validation-for="username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="password" class="control-label"></label>
                <input asp-for="password" class="form-control"/>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="det" class="control-label"></label>
                <input asp-for="det" class="form-control" />
                <span asp-validation-for="det" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="det_code" class="control-label"></label>
                <input asp-for="det_code" class="form-control" />
                <span asp-validation-for="det_code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="last_name" class="control-label"></label>
                <input asp-for="last_name" class="form-control" />
                <span asp-validation-for="last_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="emp_code" class="control-label"></label>
                <input asp-for="emp_code" class="form-control" />
                <span asp-validation-for="emp_code" class="text-danger"></span>
            </div>
            @{ string disabled = HttpContextAccessor.HttpContext.Session.GetString("_Position")=="1" ?  null:"disabled"; }
            <div class="form-group">
                <label asp-for="position" class="control-label"></label>
                <select class="form-control" asp-for="position" class="form-control" disabled="@disabled"> 
                    <option value="1">1 - Admin</option>
                    <option value="2">2 - User</option>
                </select>
                <span asp-validation-for="position" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <input type="submit" value="Save" class="btn btn-primary" />
                <input type="button" value="Reset" class="btn btn-outline-secondary" onclick="location.reload()"/>
            </div>
        </div>
    </div>
</form>

<div class="text-center">
    <a asp-action="Index"><i class="fas fa-chevron-circle-left"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

