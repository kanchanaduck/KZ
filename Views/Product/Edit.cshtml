@model PTum.Models.Tb_mst_product

@{
    ViewData["Title"] = "Edit product";
}


<form asp-action="Edit">
    <div class="col-md-4 offset-md-4">            
        <div class="card card-info">
            <div class="card-header">
                <h3 class="card-title">Edit product</h3>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="prd_code" class="control-label"></label>
                    <input asp-for="prd_code" class="form-control" />
                    <span asp-validation-for="prd_code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="prd_name" class="control-label"></label>
                    <input asp-for="prd_name" class="form-control" />
                    <span asp-validation-for="prd_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="prd_img" class="control-label"></label>
                    <input asp-for="prd_img" class="form-control" />
                    <span asp-validation-for="prd_img" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="prd_category" class="control-label"></label>
                    <input asp-for="prd_category" class="form-control" />
                    <span asp-validation-for="prd_category" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="prd_cate_img" class="control-label"></label>
                    <input asp-for="prd_cate_img" class="form-control" />
                    <span asp-validation-for="prd_cate_img" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="prd_type" class="control-label"></label>
                    <input asp-for="prd_type" class="form-control" />
                    <span asp-validation-for="prd_type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="prd_model" class="control-label"></label>
                    <input asp-for="prd_model" class="form-control" />
                    <span asp-validation-for="prd_model" class="text-danger"></span>
                </div>
                <div class="form-group text-right">
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <input type="button" value="Reset" class="btn btn-outline-secondary" onclick="location.reload()"/>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="text-center">
    <a asp-action="Index"><i class="fas fa-chevron-circle-left"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
