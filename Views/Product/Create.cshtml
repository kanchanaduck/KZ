@model PTum.Models.Tb_mst_product

@{
    ViewData["Title"] = "Create product";
}

<div class="col-4 offset-md-4">
<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Product detail</h3>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="prd_code" class="control-label"></label>
                <input asp-for="prd_code" class="form-control" />
                <span asp-validation-for="prd_code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prd_name" class="control-label"></label>
                <input asp-for="prd_name" class="form-control" />
                <span asp-validation-for="prd_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prd_category" class="control-label"></label>
                <input asp-for="prd_category" class="form-control" />
                <span asp-validation-for="prd_category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prd_type" class="control-label"></label>
                <input asp-for="prd_type" class="form-control" />
                <span asp-validation-for="prd_type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prd_model" class="control-label"></label>
                <input asp-for="prd_model" class="form-control" />
                <span asp-validation-for="prd_model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prd_cpt_name" class="control-label"></label>
                <input asp-for="prd_cpt_name" class="form-control" />
                <span asp-validation-for="prd_cpt_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prd_fixasset_name" class="control-label"></label>
                <input asp-for="prd_fixasset_name" class="form-control" />
                <span asp-validation-for="prd_fixasset_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prd_serial_num" class="control-label"></label>
                <input asp-for="prd_serial_num" class="form-control" />
                <span asp-validation-for="prd_serial_num" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="insert_qty" id="insert_qty" value="true">
                <label class="form-check-label" for="insert_qty">Insert 1 qty</label>
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-success">Create</button>
                <a class="btn btn-outline-secondary" href='@Url.Action("Index", "Product")'>Back</a>
            </div>
        </form>
    </div>
</div>
</div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
