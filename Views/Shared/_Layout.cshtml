@using Microsoft.AspNetCore.Http;
@using PTum.Models
@inject IHttpContextAccessor HttpContextAccessor;
@{ 
  var controller = ViewContext.RouteData.Values["Controller"];
  List<Menu> menuItems = new List<Menu>() {
    new Menu{  
      menu = "Home",
      text = "Home",
      type = "Public" 
    },
    new Menu{  
      menu = "Product",
      text = "Product",
      type = "Private" 
    },
    @* new Menu{  
      menu = "Category",
      text = "Category",
      type = "Private"  
    }, *@
    new Menu{  
      menu = "StockIn",
      text = "Stock in",
      type = "Private"  
    },
    new Menu{  
      menu = "StockOut",
      text = "Stock out",
      type = "Public"  
    },
  };
}


